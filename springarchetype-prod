keycloak:
  auth-server-url: https://localhost:8080/auth
  realm: testrealm
  resource: testclient
  public-client: true
  principal-attribute: preferred_username

  security-constraints:
    - authRoles:
        - user
      securityCollections:
        - patterns:
            - "/secured/*"


spring:
  security:
    oauth2:
      resourceserver:
        multitenant:
          enabled: true
          resolve-mode: jwt
          jwt:
            authorities-converter: io.quantics.multitenant.oauth2.config.KeycloakRealmAuthoritiesConverter
  application:
    name: springarchetype
  cloud:
    config:
      profile: prod
      discovery:
        enabled: true
        service-id: CONFIGSERVER
  config:
    import: "optional:configserver:"
    boot:
      admin:
        client:
          url: ${ADMIN_SERVER_URL:http://localhost:8761/eureka/adminserver}
  management:
    endpoints:
      web:
        exposure:
          include: "*"
    endpoint:
      health:
        show-details: always
  jpa:
    hibernate:
      dialect: org.hibernate.dialect.PostgreSQL10Dialect
      ddl-auto: update
eureka:
  client:
    service-url:
      defaultZone: ${EUREKA_URI:http://localhost:8761/eureka/}

project:
  name: /springarchetype
server:
  port: 8081
  
logging:
  level:
    org:
     springframework:
      web: TRACE
